<script>
    let kolejny=1;
    let button=document.querySelector("#stworzony_akapit");
button.addEventListener("click", dodajAkapit);
  function dodajAkapit(){
        let miejsce_akapitow=document.querySelector("#akapity");
        let nakapit=document.createElement("p");
        nakapit.innerHTML="Akapit nr   " + kolejny;
        miejsce_akapitow.appendChild(nakapit);
        kolejny++
    }
</script>    
